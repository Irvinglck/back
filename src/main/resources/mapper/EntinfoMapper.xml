<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.icbc.ipa.shellent.dao.EntinfoDao">

    <sql id="BASE_COLUMN">
        ID,ENTINFOID,ENTNAME,CREDITCODE,REGNO,BASEDATA,CREATETIME,UPDATETIME
    </sql>

    <sql id="BASE_TABLE">
  	 RC_SHELLENT_ENTINFO
   </sql>

    <insert id="add" parameterType="com.icbc.ipa.shellent.model.Entinfo">
        INSERT INTO
        <include refid="BASE_TABLE"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="entinfoId != null">
                entinfo_id,
            </if>
            <if test="entName != null">
                ent_name,
            </if>
             <if test="creditCode != null">
                 credit_code,
            </if>
            <if test="regno != null">
                regno,
            </if>
            <if test="baseData != null">
                base_data,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>

        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            <if test="entinfoId != null">
                #{entinfoId},
            </if>
            <if test="entName != null">
                #{entName},
            </if>
            <if test="creditCode != null">
                #{creditCode},
            </if>
            <if test="regno != null">
                #{regno},
            </if>
            <if test="baseData != null">
                #{baseData},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
        </trim>
    </insert>


    <update id="update" parameterType="com.icbc.ipa.shellent.model.Entinfo">
        UPDATE
        <include refid="BASE_TABLE"/>
        <set>
            <trim>
                <if test="entName != null">
                    ent_name= #{entName},
                </if>
                <if test="creditCode != null">
                    credit_code = #{creditCode},
                </if>
                <if test="regno != null">
                    regno = #{regno},
                </if>
                <if test="baseData != null">
                    base_data = #{baseData},
                </if>
                <if test="createTime != null">
                    create_time = #{createTime},
                </if>
                <if test="updateTime != null">
                    update_time = #{updateTime},
                </if>
            </trim>
        </set>
        WHERE entinfoId = #{entinfoId}
    </update>

    <select id="findOne" resultType="com.icbc.ipa.shellent.model.Entinfo" parameterType="java.lang.String">
    	select <include refid="BASE_COLUMN"/> from <include refid="BASE_TABLE"/> where  entinfoId = #{entinfoId}
    </select>

    <delete id="delete" parameterType="com.icbc.ipa.shellent.model.Entinfo">
        DELETE FROM
        <include refid="BASE_TABLE"/>
        WHERE entinfoId = #{entinfoId}
    </delete>

</mapper>